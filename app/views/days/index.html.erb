

<% if user_signed_in? %>

     <div class="header">
          <div class="email"><%= current_user.email %></div>
     </div>
     <a href="/days/new" class="new-day">+</a>
     <% @days.each do |day| %>
          <div class="image-container"><img class="day-image" src="<%= day.image %>"/></div>
          <div>
               <div>
                    <%= l day.created_at, format: :short %>
               </div>
               <%= day.question1 %><br>
               <%= day.question2 %><br>
               <%= day.question3 %><br>
          </div>
          <div class="editing">
               <%= link_to 'Edit', edit_day_path(day) %> |
               <%= link_to 'Delete', day, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <br>
          <br>
     <% end %>

     <br>
     <br>

     <%= link_to 'New Day', new_day_path %>

<% else %>

     <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
     <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>

<% end %>


