

<% if user_signed_in? %>

     
     <a href="/days/new" class="new-day">+</a>
     <% @days.each do |day| %>
          <div class="image-container" style="background-image: url(<%= day.image %>);"/></div>
          <div class="entry">
               <div class="editing">
                    <%= l day.created_at, format: :short %>
               </div>
               <br>
               <br>
               <%= day.question1 %><br><hr>
               <%= day.question2 %><br><hr>
               <%= day.question3 %><br>
               <br>
               <br>
               <div class="editing">
                    <%= link_to 'Edit', edit_day_path(day) %>
<!--                     <%= link_to 'Delete', day, method: :delete, data: { confirm: 'Are you sure?' } %> -->
               </div>
          </div>
     <% end %>
     <div class="header">
          <div class="email"><%= current_user.email %></div>
     </div>

<% else %>

     <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
     <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>


<% end %>


