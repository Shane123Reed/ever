

<% if user_signed_in? %>
     <a href="/days/new" class="new-day">+</a>
     
     <div id="infinte">
          <%= render @days %>
     </div>

     <%= will_paginate @days %>

     <div class="header">
          <div class="email"><%= current_user.email %></div>
     </div>


<% else %>

     <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
     <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>


<% end %>


